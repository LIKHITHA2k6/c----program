#include <stdio.h>
#include <string.h>

#define MAX_STUDENTS 5
#define MAX_NAME_LEN 50
#define PASS_MARK 40

// Function to calculate average of marks
float calculateAverage(int marks[], int size) {
    int sum = 0;
    for(int i = 0; i < size; i++) {
        sum += marks[i];
    }
    return (float)sum / size;
}

int main() {
    char names[MAX_STUDENTS][MAX_NAME_LEN];
    int marks[MAX_STUDENTS][3]; // 3 subjects per student

    printf("Enter details for %d students:\n\n", MAX_STUDENTS);

    for(int i = 0; i < MAX_STUDENTS; i++) {
        printf("Student %d name: ", i + 1);
        scanf(" %[^\n]", names[i]);

        printf("Enter marks for 3 subjects:\n");
        for(int j = 0; j < 3; j++) {
            printf("Subject %d: ", j + 1);
            scanf("%d", &marks[i][j]);
        }
        printf("\n");
    }

    printf("\n----- Student Report -----\n");

    for(int i = 0; i < MAX_STUDENTS; i++) {
        float avg = calculateAverage(marks[i], 3);
        printf("Name: %s\n", names[i]);
        printf("Average Marks: %.2f\n", avg);
        printf("Result: %s\n", avg >= PASS_MARK ? "Pass" : "Fail");
        printf("-------------------------\n");
    }

    return 0;
}
